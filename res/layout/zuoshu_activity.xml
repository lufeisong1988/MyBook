<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zuoshu_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/morebookbackground" >

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent" >

        <com.starbaby.diyBook.view.CreateCurlView
             android:soundEffectsEnabled="false"
            android:id="@+id/zuoshu_curlView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </com.starbaby.diyBook.view.CreateCurlView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zuoshu_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/shadowLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" >
            </ImageView>

            <ImageView
                android:id="@+id/addPhoto1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="matrix" >
            </ImageView>

            <ImageView
                android:id="@+id/addFrame1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" >
            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/shadowRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" >
            </ImageView>

            <ImageView
                android:id="@+id/addPhoto2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:scaleType="matrix" >
            </ImageView>

            <ImageView
                android:id="@+id/addFrame2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" >
            </ImageView>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>