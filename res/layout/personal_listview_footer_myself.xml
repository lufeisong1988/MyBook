<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:orientation="vertical" >

    <ViewSwitcher
        android:id="@+id/personal_listview_footer_myself_viewswitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ProgressBar
                android:id="@+id/personal_listview_footer_myself_progress"
                style="@style/loading_small" />

            <TextView
                android:id="@+id/personal_listview_footer_myself_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/load_ing" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dip"
            android:background="@drawable/personal_warn_myself_bg"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/personal_listview_footer_myself_warn_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip"
                android:drawableLeft="@drawable/personal_warn_icon"
                android:text="亲，当前没有任何话题哦是！" />

            <Button
                android:id="@+id/personal_listview_footer_myself_warn_pub_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/personal_to_pub" />
        </LinearLayout>
    </ViewSwitcher>

</LinearLayout>