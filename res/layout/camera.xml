<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@+id/camera_parent"
    android:layout_height="fill_parent" >

    <SurfaceView
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </SurfaceView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/camera_bg_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </ImageView>

        <ImageView
            android:id="@+id/camera_bg_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </ImageView>
    </LinearLayout>

    <ImageView
        android:id="@+id/camera_cover"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="right"
        android:background="@drawable/toolbar"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible" >

            <Button
                android:id="@+id/zuoshu_menu_bnt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_off"
                android:soundEffectsEnabled="false"
                android:text="看书模式" >
            </Button>

            <Button
                android:id="@+id/zuoshu_menu_bnt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_done"
                android:soundEffectsEnabled="false"
                android:text="做书模式"
                android:textColor="@android:color/white" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="150dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/camera_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/camera_cancle"
                android:soundEffectsEnabled="false" />

            <Button
                android:id="@+id/camera_bnt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/takephoto"
                android:soundEffectsEnabled="false" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>