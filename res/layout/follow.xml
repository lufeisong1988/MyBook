<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2e4c7"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/userinfo_title" >

        <ImageView
            android:id="@+id/follow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/head_back_red" />
    </FrameLayout>

    <com.starbaby.diyBook.clientwidget.PullToRefreshListView
        android:id="@+id/follow_list"
        style="@style/widget_listview" />

</LinearLayout>