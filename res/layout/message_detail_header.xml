<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_detail_header"
   	android:layout_width="match_parent"
   	android:layout_height="wrap_content"
   	android:gravity="center_vertical"
   	android:orientation="horizontal"
   	android:background="@drawable/userinfo_title">
   	<ImageView 
   		android:id="@+id/message_detail_back"
	   	android:layout_width="wrap_content" 
	   	android:layout_height="wrap_content" 
	   	android:layout_marginLeft="10dip"
	   	android:layout_gravity="left|center"
	   	android:clickable="true" 
	   	android:background="@drawable/head_back_red"/>
<!--    	<TextView 
   		android:id="@+id/message_detail_head_title"
   		style="@style/detail_head_title" 
   		android:layout_gravity="center"
   		android:textSize="@dimen/text_size_18" 	   		
   		android:text="@string/post"/> -->
	<ProgressBar 
		android:id="@+id/message_detail_head_progress" 
		style="@style/loading_small"
		android:layout_gravity="right|center"
		android:layout_marginRight="10dip"/>
   	<ImageView 
   		android:id="@+id/message_detail_refresh"
	   	android:layout_width="wrap_content" 
	   	android:layout_height="wrap_content" 
	   	android:layout_gravity="right|center"
	   	android:clickable="true" 
	   	android:layout_marginRight="10dip"
	   	android:background="@drawable/head_refresh"
		android:visibility="gone"/>
   	 <ImageView 
   		android:id="@+id/message_detail_cancle"
	   	android:layout_width="wrap_content" 
	   	android:layout_height="wrap_content" 
	   	android:layout_gravity="right|center"
	   	android:clickable="true" 
	   	android:layout_marginRight="10dip"
	   	android:background="@drawable/head_cancle"
		android:visibility="gone"/>
</FrameLayout>