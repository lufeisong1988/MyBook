<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000" >

    <RelativeLayout
        android:id="@+id/image_upload_pager_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/zoom_bg"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip" >

        <ImageButton
            android:id="@+id/image_upload_pager_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/zoom_back_btn" />

        <ImageButton
            android:id="@+id/image_upload_pager_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/mm_title_btn_right"
            android:src="@drawable/voice_remind_del_btn" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/image_upload_pager_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/image_upload_pager_head" />

